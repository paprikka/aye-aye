{
  "manifest_version": 3,
  "name": "Aye-Aye",
  "version": "1.0",
  "action": {
    "default_title": "Grab them links aye!",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "preview.html",
        "content.css",
        "src/content/*",
        "node_modules/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
